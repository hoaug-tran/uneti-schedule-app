{
  "name": "uneti-schedule-widget",
  "version": "1.4.2",
  "description": "Widget lịch học UNETI",
  "author": "Trần Kính Hoàng (hoaug)",
  "type": "module",
  "main": "main/main.js",
  "scripts": {
    "login": "node app/fetcher/loginAndSaveCookies.js",
    "fetch": "node app/fetcher/getSchedule.js",
    "dev": "electron main/main.js",
    "build": "electron-builder"
  },
  "devDependencies": {
    "depcheck": "^1.4.7",
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "cheerio": "^1.0.0-rc.12",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.hoaug.uneti.schedule",
    "productName": "Widget lịch học UNETI",
    "artifactName": "uneti-schedule-widget-${version}-setup.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "app/**/*",
      "preload.cjs",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/htmlparser2/**"
    ],
    "extraResources": [
      {
        "from": "app/assets/",
        "to": "assets"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "hoaug-tran",
        "repo": "uneti-schedule-app"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "app/assets/uneti.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    }
  }
}
