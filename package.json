{
  "name": "uneti-schedule-widget",
  "version": "1.5.3",
  "description": "Widget lịch học UNETI",
  "author": "Trần Kính Hoàng (hoaug)",
  "type": "module",
  "main": "main/main.js",
  "scripts": {
    "login": "node app/fetcher/loginAndSaveCookies.js",
    "fetch": "node app/fetcher/getSchedule.js",
    "dev": "cross-env NODE_ENV=development electron main/main.js",
    "build": "electron-builder",
    "update-server": "http-server ./dist -p 8080 --cors"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "depcheck": "^1.4.7",
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0",
    "lucide": "^0.562.0"
  },
  "build": {
    "appId": "com.hoaug.uneti.schedule",
    "productName": "Widget lịch học UNETI",
    "artifactName": "uneti-schedule-widget-${version}-setup.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "app/**/*",
      "preload.cjs",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/htmlparser2/**"
    ],
    "extraResources": [
      {
        "from": "app/assets/",
        "to": "assets"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "hoaug-tran",
        "repo": "uneti-schedule-app"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "app/assets/uneti.ico",
      "publisherName": "Trần Kính Hoàng (hoaug)",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "license": "build/license.txt",
      "include": "build/installer.nsh",
      "installerHeaderIcon": "app/assets/uneti.ico",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Widget lịch học UNETI",
      "menuCategory": true,
      "displayLanguageSelector": false
    }
  }
}
